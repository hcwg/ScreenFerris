<UserControl x:Class="WpfDemo.UserControls.SensorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>
        <Label x:Name="sensorNameLabel"  HorizontalAlignment="Left" Margin="0,-2,0,0" VerticalAlignment="Top" Height="38"  FontSize="22">
            <TextBlock Text="{Binding Path=DeviceName}"/>
        </Label>
    </Grid>
</UserControl>
